<h1>Listing users</h1>

<table>
  <tr>
    <th width=200>Login name</th>
    <th width=100>Name</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.login_name %></td>
    <td><%= user.name %></td>
    <td><%= link_to 'Show', user %>
		<%= link_to 'Edit', edit_user_path(user) %>
    <%= link_to (user.available ? 'Stop' : 'Start' ), user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
