<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<% if @user.new_record? %>
  <div class="field">
    <%= f.label :login_name %><br />
    <%= f.text_field :login_name %>
  </div>
<% else %>
  <div class="field">
  <%= f.label :login_name %>: <%= @user.login_name %><br>	
  </div>
<% end %>
  <div class="field">
    <%= f.label :plain_password %><br />
    <%= f.password_field :plain_password %>
		<% if !@user.new_record? %> leave it blank if you don't want to change the password <% end %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
